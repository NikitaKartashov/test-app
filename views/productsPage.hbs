
{{#each products }}
    <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="{{image.src}}">
        </div>
        <div class="card-content">
       {{!-- <a><span class="card-title" href="{{title}}">{{title}}</span></a> --}}
       <span class="card-title"><a href="/product/{{id}}?shop={{ ../shopDomain }}">{{title}}</a></span>
          <p>Price: {{variants.0.price}}</p>
        </div>
      </div>
    </div>
  </div>
{{/each}}



<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link" href="/productsPage?sinceId={{prev.id}}&shop={{shopDomain}}"><</a></li>
    {{#if next}}
    <li class="page-item"><a class="page-link" href="/productsPage?sinceId={{next.id}}&shop={{shopDomain}}">></a></li>
    {{else}}
     <li class="page-item"><a class="page-link" href="/productsPage?sinceId={{next.id}}&shop={{shopDomain}}">></a></li>
     {{/if}}
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>